{
  "name": "re-toast",
  "version": "1.0.0",
  "description": "A simple library for sending notifications",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josephenoch/re-toast.git"
  },
  "keywords": [
    "reactjs",
    "toastify",
    "notification",
    "typescript",
    "javascript"
  ],
  "author": "Joseph Enoch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/josephenoch/re-toast/issues"
  },
  "homepage": "https://github.com/josephenoch/re-toast#readme",
  "peerDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^8.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sass": "^1.55.0",
    "typescript": "^4.4.2",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.55.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.82.1",
